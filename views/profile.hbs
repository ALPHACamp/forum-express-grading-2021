<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p><strong>{{count}}</strong> 已評論餐廳</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">編輯</a>
  </div>
</div>
<br />
<div class="card">
  <div class="card-header">
    <strong>{{count}}</strong> 已評論餐廳
  </div>
  <div class="row">
    {{#each comments}}
    <div class="border m-3 p-3">
      <h5>{{this.Restaurant.name}}</h5>
      <img class=" img-responsive center-block" src="{{this.Restaurant.image}}"
        style="width: 100px;margin-bottom: 1em; display: block">
      <a href="/restaurants/{{this.Restaurant.id}}" class="btn btn-info">查看</a>
    </div>
    <br />
    {{/each}}
  </div>

</div>
<br />
<a href="javascript:history.back()">回上一頁</a>