<div class="card mb-4">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{user.image}}" class="img-responsive center-block" style="width: 250px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit">
          <button type="button" class="btn btn-primary">Edit</button>
        </a>
      </div>
    </div>
  </div>
</div>