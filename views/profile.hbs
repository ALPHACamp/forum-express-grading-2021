<div class="container-fluid">
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="{{user.image}}" style="max-height: 200px;" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">{{user.name}}</h5>
          <p class="card-text">{{user.email}}</p>
          {{#if isMe}}
          <a href='/users/{{user.id}}/edit'>
            <button type="button" class="btn btn-primary mb-3">edit</button>
          </a>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      已評論餐廳
    </div>
    <div class="card-body">
      {{#each user.Comments}}
      <a href='/restaurants/{{this.RestaurantId}}'>
        <img src="{{this.Restaurant.image}}" class="mx-2 mb-2" style="max-height: 60px;" title="{{this.Restaurant.name}}" alt="...">
      </a>
      {{/each}}
    </div>
  </div>

</div>