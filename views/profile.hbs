<div class="d-flex">
  <div class="col-md-3">
    <img src="{{user.image}}" alt="user-avatar" style="width:100%;">
  </div>
  <div class="card-md-9">
    <h3>{{user.name}}</h3>
    <p>{{user.email}}</p>
    <p>{{user.Comments.length}} 已評論餐廳</p>
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
  </div>
</div>
<div class="card mt-3">
  <div class="card-header">{{user.Comments.length}} 已評論餐廳</div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" alt="restaurant-image" width="7%">
    </a>
    {{/each}}
  </div>
</div>