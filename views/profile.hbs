<div class="container">
  <div class="card mt-1">
    <div class="d-flex">
      <img class="m-4" src="{{user.image}}" style="width: 250px; height: 250px">
      <div class="mt-4 ml-2">
        <h2>{{user.name}}</h2>
        <p>{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
      </div>
    </div>
  </div>

  <div class="card mt-2">
    <h3 class="mx-auto mb-3 mt-2">評論過的餐廳</h3>
    <div class="d-flex">
      {{#if user.Comments}}
      {{#each user.Comments}}
      {{#if this.RestaurantId}}
      <a href="/restaurants/{{this.RestaurantId}}" class="ml-2">
        <img src="{{this.Restaurant.image}}" alt="" style="width: 100px; height: 100px; border-radius:50%">
      </a>
      {{/if}}
      {{/each}}
      {{/if}}
    </div>
  </div>
</div>