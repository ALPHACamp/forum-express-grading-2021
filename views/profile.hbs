{{> message}}
<div class="card mb-3 w-100">
  <div class="row no-gutters">
    <div class="col-md-3">
      <img src="{{user.image}}" style="width: 100%; object-fit: contain;">
    </div>
    <div class="col-md-9">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <b>{{user.Comments.length}} 已評論餐廳</b>
  </div>
  <div class="card-body container mx-1">
    <div class="row">
      {{#each user.Comments}}
      <div class="col-md-1 p-2" style="aspect-ratio: 1;" data-toggle="tooltip" data-placement="bottom" title="{{this.Restaurant.name}}">
        <a href="/restaurants/{{this.RestaurantId}}">
          <img src="{{this.Restaurant.image}}" style="width: 100%; height: 100%; object-fit: cover;">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>