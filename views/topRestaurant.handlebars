<h1>人氣餐廳</h1>
<hr />

<div class="row">
  {{#each restaurants}}
  <div class="col-12 mx-auto">
    <div class="row shadow-lg mb-5">
      <div class="col-md-4">
        <img class="card-img-top mt-3" src="{{this.image}}" alt="Card image cap" width="150px" height="200px">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <p class="card-text">
          <h3>{{ this.name }}</h3>
          </p>
          <span class="badge badge-secondary">收藏數: {{this.favoritedCount}}</span>
          <p class="card-text">{{this.description}}</p>

          <div class="d-flex">
            <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-3">Show</a>
            {{#if this.isFavorited }}
            <form action="/favorite/{{this.id}}?_method=DELETE" method="POST">
              <button class="btn btn-danger mr-3" type="submit">移除最愛</button>
            </form>
            {{else}}
            <form action="/favorite/{{this.id}}" method="POST">
              <button class="btn btn-primary mr-3" type="submit">加到最愛</button>
            </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>