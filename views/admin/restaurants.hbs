<h1>餐廳清單管理</h1>
<a href='/admin/restaurants'>Restaurants</a> |
<a href='/admin/categories'>Categories</a>
<br />
<br />

<div class="d-flex justify-content-between mb-2">
  <a href='/admin/restaurants/create'>
    <button type="button" class="btn btn-info">New Restaurant</button>
  </a>

  <a href='/admin/users'>
    <button type="button" class="btn btn-info">使用者權限管理</button>
  </a>
</div>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    <div class="row">
      {{#each restaurants}}
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
          <div class="card-body">
            <p class="card-text">
              <a href="/restaurants/{{this.id}}">
                {{this.name}}
              </a>
            </p>
            <span class="badge badge-secondary">{{this.categoryName}}</span>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      </div>
      {{/each}} 
    </div>
  </tbody>
</table>