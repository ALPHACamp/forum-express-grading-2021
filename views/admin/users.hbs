<h1>使用者後台</h1>

<a class="btn btn-primary" href="/admin/restaurants/create" role="button">New Restaurant</a>
<a class="btn btn-primary" href="/admin/restaurants" role="button">Restaurants</a>
<a class="btn btn-success" href="/admin/users" role="button">Users</a>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td>
        {{#if this.isAdmin}}
        admin
        {{else}}
        user
        {{/if}}
      </td>
      <td>
        <form action="users/{{this.id}}/toggleAdmin?_method=PUT" method="POST">
          <button type="submit">
            {{#if this.isAdmin}}
            set as user
            {{else}}
            set as admin
            {{/if}}
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>