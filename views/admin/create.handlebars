<form action="/admin/restaurants" method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" class="form-control" placeholder="Enter name">
  </div>

  <div class="form-group">
    <label for="tel">Tel</label>
    <input type="text" name="tel" id="tel" class="form-control" placeholder="Enter telephone">
  </div>

  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" name="address" id="address" class="form-control" placeholder="Enter address">
  </div>

  <div class="form-group">
    <label for="opening_hours">Opening Hours</label>
    <input type="text" name="opening_hours" id="opening_hours" class="form-control" placeholder="Enter opening hours">
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    <textarea type="text" name="description" id="description" class="form-control" placeholder="Enter description"
      rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

</form>