<h1>人氣餐廳</h1>
<hr />

<div class="row">
  {{#each restaurants}}
  <div class="col-md-8 mx-auto">
    <div class="card mb-4 shadow-sm">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="{{this.image}}" alt="Card image cap" width="100%" height="180px">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <p class="card-text">
              <h5>{{this.name}}</h5>
            </p>
            <span class="badge badge-secondary">收藏數：{{this.favoritedCount}}</span>
            <p class="card-text">{{this.description}}</p>

            <div class="d-flex">
              <a href="/restaurants/{{this.id}}" class="btn btn-primary mr-2">Show</a>
              {{#if this.isFavorited }}
              <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" class="mr-2"><button type="submit"
                  class="btn btn-danger">移除最愛</button></form>
              {{else}}
              <form action="/favorite/{{this.id}}" method="POST" class="mr-2"><button type="submit"
                  class="btn btn-primary">加到最愛</button></form>
              {{/if}}
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>