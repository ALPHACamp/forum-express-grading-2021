<form class="form-userEdit" action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-label-group">
    <label for="name">Name</label>
    <input type="text" name="name" value="{{user.name}}" class="form-control" placeholder="Edit Name" required autofocus>
  </div>

  <div class="form-group mt-3">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image" value="{{user.image}}">
  </div>

  <button class="btn btn-lg btn-primary mt-4" type="submit">Submit</button>
</form>