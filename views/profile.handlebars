<div class="card mt-5">
  <div class="row ">
    <div class="col-md-4 d-flex justify-content-center">
      <img class="card-img-top m-2 " src="{{user.image}}" style="width: 180px;border-radius: 50%">
    </div>
    <div class="card-body col-md-8">
      <h5 class="card-title">{{user.name}}</h5>
      <p class="card-text">{{user.email}}</p>
      <p>{{count user.Comments}}已評論餐廳</p>
      <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
    </div>
    <hr>
  </div>
</div>
<br />
<div class="card">
  <div class="card-header">
    {{count user.Comments}}已評論餐廳
  </div>
  <div class="card-body">
    {{#each user.Comments}}
    <a href="/restaurants/{{this.Restaurant.id}}">
      <img src="{{this.Restaurant.image}}" style="width: 100px;">
    </a>
    {{/each}}
  </div>
</div>
