<div class="row mt-4">
  <div class="col-md-4">
    <img class="img" src="{{user.image}}" style="width: 100%;">
  </div>

  <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title">{{user.name}}</h5>
      <p class="card-text">{{user.email}}</p>
      <a href="/users/{{user.id}}/edit">
        <button type="button" class="btn btn-primary">Edit</button>
      </a>
    </div>
  </div>
</div>
<br>
<br>
<div class="card">
  <div class="card-header">
    已評論餐廳
  </div>
  <div class="card-body">
    {{#each comments}}
    <a href="/restaurants/{{this.Restaurant.id}}" style="display: inline-block;">
      <img class="img" src="{{this.Restaurant.image}}" style="width: 100px; height:100px">
    </a>
    {{/each}}
  </div>
</div>
</div>