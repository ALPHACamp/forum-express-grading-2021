<div class="row">
    <div class="col-md-4">
            <img class="card-img-top" src={{user.image}}/>
    </div>
    <div class="col-md-8">
        <h4>{{user.name}}</h4>
        <p>{{user.email}}</p>

        <a href='/users/{{user.id}}/edit'>
                <button type="button" class="btn btn-primary">Edit</button>
            </a>
    </div>
    <div class="card">
        <p class="card-header">{{count}}已評論餐廳</p>
        <div class="card-body">
            {{#each comments}}
                <a href="/restaurants/{{this.Restaurant.id}}">
                    <img src="{{this.Restaurant.image}}" style="width: 100px;">
                </a>
            {{/each}}
        </div>




</div>
