<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-7">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <br />
    <br />
    <br />
    <br />
    <br />
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
  </div>

  <div class="card mt-5">
    <div class="card-header">
      已評論餐廳
    </div>
    <div class="card-body">
      {{#each user.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}" style="display: inline-block;" class="ml-3">
        <img class="img-responsive center-block mx-auto" src="{{this.Restaurant.image}}" alt="profile-image"
          style="width: 100px;">
      </a>
      {{/each}}
    </div>
  </div>
</div>