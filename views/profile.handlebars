<div class="card mt-3">
<div class="card-body row">
  <div class="col-md-4">
    {{#if user.image}}
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px;height:250px;margin-bottom: 25px;">
    {{else}}
    <img class="img-responsive center-block"
      src="https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png"
      style="width: 250px;margin-bottom: 25px;">
    {{/if}}
  </div>
  <div class="col-md-8">
    <h4>{{user.name}}</h4>
    <p>{{user.email}}</p>
    <p>{{commentCount}} 已評論餐廳</p>
    <br>
    <br>
    <br>
    {{#ifCond user.id loginUser.id}}
    <a href='/users/{{user.id}}/edit'>
      <button type="button" class="btn btn-primary">Edit</button>
    </a>
    {{/ifCond}}
  </div>
</div>
</div>

<div class="card mt-3">
  <div class="card-header">
    <strong>{{commentCount}} 已評論餐廳</strong>
  </div>
  {{#if commentedRes}}
  <div class="card-body row">
    {{#each commentedRes}}
    <div class="col-md-1">
      <a href='/restaurants/{{this.id}}'>
        <img class="img-responsive center-block" src="{{this.image}}" style="width: 50px; height:50px; ">
      </a>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>