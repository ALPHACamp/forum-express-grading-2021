<div class="row">
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}" style="width: 250px;margin-bottom: 25px;">
  </div>
  <div class="col-md-8">
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <a href="/users/{{user.id}}/edit" class="btn btn-primary">edit</a>
  </div>
</div>

<div class="card mt-5">
  <p class="card-header">已評論餐廳</p>
  <div class="card-body">
    {{#each user.Comments}}
    <a class="m-2" href="/restaurants/{{this.RestaurantId}}"><img class="img-responsive center-block"
        src="{{this.Restaurant.image}}" alt="profile-image" style="width: 100px"></a>
    {{/each}}
  </div>
</div>
</div>