<div class="card">
  <div class="card-body row">
    <div class="col-3">
      {{#if user.image}}
      <img src="{{ user.image }}" style="max-width: 100%">
      {{else}}
      <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png" style="max-width: 100%">
      {{/if}}
    </div>
    <div class="col-9 ">
      <h1>{{ user.name }}</h1>
      <p><b>{{ user.email }}</b></p>
      <p><b>{{user.Comments.length}} 已評論</b></p>
      {{#ifCond user.id operator.id}}
      <a class="btn btn-primary mt-5" href="/users/{{user.id}}/edit">edit</a>
      {{/ifCond}}
    </div>
  </div>
</div>

<div class="card mt-5">
  <div class="card-header">
    最近評論的餐廳:  
  </div>

  <div class="card-body row">
    {{#each user.Comments}}
    <div class="col-1">
      <a href="/restaurants/{{this.RestaurantId}}" class="">
        <img src="{{this.Restaurant.image}}" alt="" style="width: 100%; height: 100%;">
      </a>
    </div>
    {{/each}}
  </div>
</div>
